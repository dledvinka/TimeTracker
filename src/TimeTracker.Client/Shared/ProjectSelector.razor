@inject HttpClient Http;
@inject ITimeEntryService TimeEntryService;

<div class="form-group my-4">
    <InputSelect @bind-Value="_selectedProjectId" @oninput="OnInput" class="form-control">
        <option value="0">All projects</option>
        @foreach (var project in _projects)
        {
            <option value="@project.Id">@project.Name</option>
        }
    </InputSelect>


</div>

@code {
    private List<ProjectResponse> _projects = new();
    private int _selectedProjectId;

    protected override async Task OnInitializedAsync()
    {
        var projects = await Http.GetFromJsonAsync<List<ProjectResponse>>("api/project");

        if (projects != null)
        {
            _projects = projects;
        }
    }

    private async Task OnInput(ChangeEventArgs e)
    {
        if (e.Value != null)
        {
            if (int.TryParse(e.Value.ToString(), out var projectId))
            {
                await TimeEntryService.GetTimeEntriesByProject(projectId);
            }
        }
    }
}
